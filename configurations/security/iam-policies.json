{
  "XYZCorpS3AdminPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "S3FullAccessToProjectBuckets",
        "Effect": "Allow",
        "Action": [
          "s3:*"
        ],
        "Resource": [
          "arn:aws:s3:::xyz-corp-storage-*",
          "arn:aws:s3:::xyz-corp-storage-*/*",
          "arn:aws:s3:::your-domain.com",
          "arn:aws:s3:::your-domain.com/*"
        ]
      },
      {
        "Sid": "CloudWatchMetricsAccess",
        "Effect": "Allow",
        "Action": [
          "cloudwatch:PutMetricData",
          "cloudwatch:GetMetricStatistics",
          "cloudwatch:ListMetrics"
        ],
        "Resource": "*"
      },
      {
        "Sid": "Route53Access",
        "Effect": "Allow",
        "Action": [
          "route53:GetHostedZone",
          "route53:ListHostedZones",
          "route53:ChangeResourceRecordSets",
          "route53:GetChange"
        ],
        "Resource": "*"
      }
    ]
  },
  "XYZCorpS3ReadOnlyPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "S3ReadOnlyAccess",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:GetObjectVersion",
          "s3:ListBucket",
          "s3:ListBucketVersions",
          "s3:GetBucketLocation",
          "s3:GetBucketVersioning"
        ],
        "Resource": [
          "arn:aws:s3:::xyz-corp-storage-*",
          "arn:aws:s3:::xyz-corp-storage-*/*",
          "arn:aws:s3:::your-domain.com",
          "arn:aws:s3:::your-domain.com/*"
        ]
      }
    ]
  },
  "XYZCorpWebsiteUpdatePolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "WebsiteBucketUpdateAccess",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:PutObjectAcl",
          "s3:DeleteObject",
          "s3:ListBucket"
        ],
        "Resource": [
          "arn:aws:s3:::your-domain.com",
          "arn:aws:s3:::your-domain.com/*"
        ],
        "Condition": {
          "StringEquals": {
            "s3:ExistingObjectTag/Environment": "Production"
          }
        }
      },
      {
        "Sid": "WebsiteConfigurationAccess",
        "Effect": "Allow",
        "Action": [
          "s3:GetBucketWebsite",
          "s3:PutBucketWebsite"
        ],
        "Resource": "arn:aws:s3:::your-domain.com"
      }
    ]
  },
  "XYZCorpBackupPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "BackupBucketAccess",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:GetObjectVersion",
          "s3:ListBucket",
          "s3:ListBucketVersions",
          "s3:PutObject"
        ],
        "Resource": [
          "arn:aws:s3:::xyz-corp-backup-*",
          "arn:aws:s3:::xyz-corp-backup-*/*"
        ]
      },
      {
        "Sid": "SourceBucketReadAccess",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:GetObjectVersion",
          "s3:ListBucket",
          "s3:ListBucketVersions"
        ],
        "Resource": [
          "arn:aws:s3:::xyz-corp-storage-*",
          "arn:aws:s3:::xyz-corp-storage-*/*",
          "arn:aws:s3:::your-domain.com",
          "arn:aws:s3:::your-domain.com/*"
        ]
      }
    ]
  }
}
