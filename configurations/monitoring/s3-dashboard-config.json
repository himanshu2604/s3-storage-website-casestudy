{
  "DashboardName": "XYZCorp-S3-Website-Dashboard",
  "DashboardBody": {
    "widgets": [
      {
        "type": "metric",
        "x": 0,
        "y": 0,
        "width": 12,
        "height": 6,
        "properties": {
          "metrics": [
            ["AWS/S3", "BucketSizeBytes", "BucketName", "your-domain.com", "StorageType", "StandardStorage"],
            ["AWS/S3", "NumberOfObjects", "BucketName", "your-domain.com", "StorageType", "AllStorageTypes"],
            ["AWS/S3", "BucketSizeBytes", "BucketName", "xyz-corp-storage-[suffix]", "StorageType", "StandardStorage"]
          ],
          "period": 86400,
          "stat": "Average",
          "region": "us-east-1",
          "title": "S3 Storage Metrics"
        }
      },
      {
        "type": "metric",
        "x": 0,
        "y": 6,
        "width": 12,
        "height": 6,
        "properties": {
          "metrics": [
            ["AWS/S3", "AllRequests", "BucketName", "your-domain.com"],
            ["AWS/S3", "GetRequests", "BucketName", "your-domain.com"],
            ["AWS/S3", "PutRequests", "BucketName", "your-domain.com"],
            ["AWS/S3", "4xxErrors", "BucketName", "your-domain.com"],
            ["AWS/S3", "5xxErrors", "BucketName", "your-domain.com"]
          ],
          "period": 300,
          "stat": "Sum",
          "region": "us-east-1",
          "title": "S3 Request Metrics"
        }
      },
      {
        "type": "metric",
        "x": 0,
        "y": 12,
        "width": 12,
        "height": 6,
        "properties": {
          "metrics": [
            ["AWS/S3", "BytesDownloaded", "BucketName", "your-domain.com"],
            ["AWS/S3", "BytesUploaded", "BucketName", "your-domain.com"]
          ],
          "period": 300,
          "stat": "Sum",
          "region": "us-east-1",
          "title": "Data Transfer Metrics"
        }
      }
    ]
  }
}
